<h4> New page</h4>
<%= form_for(@page) do |f| %>
<% if @page.errors.any? %>
<ul>
<% @page.errors.full_messages.each do |pag| %>
<li><%= pag %></li>
<% end %>
</ul>
<% end %>
<div class=""form_group">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, class: 'from-control' %>
</div>
<div class=""form_group">
  <%= f.label :permalink %>
  <br>
  <%= f.text_field :permalink, class: 'from-control' %>
</div>
<div class=""form_group">
  <%= f.label :position %>
  <br>
  <%= f.number_field :position,  class: 'from-control' %>
</div>
<div class=""form_group form-check">
  <%= f.check_box :visible,  class: 'from-control' %>
  <br>
  <%= f.label :visible, class: 'form-check-label' %>
</div>
<br>

<div class=""form_group">
  <%= f.label :subject_id %>
  <br>
  <%= f.select :subject_id, options_for_select(Subject.all.map {|e| [e.name, e.id] }), class: 'from-control' %>
</div>
<%= f.submit "save", class: 'btn btn-primary' %>
<% end %>
