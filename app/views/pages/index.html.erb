<h1>All pages <%= link_to('section', {controller:'sections',action: 'index'}) %></h1>
<h1><%= link_to('subjects', {controller:'subjects',action: 'index'}) %></h1>




<%= link_to 'Add new pages', new_page_path %>
<table style="width:50%">
  <tr>
    <th>id</th>
    <th>name</th>
    <th>permalink</th>
    <th>position</th>
    <th>visible</th>
    <th>subject_id</th>
    <th>Action</th>

  </tr>
<% @page.each do |o| %>
<tr>
  <td><%= o.id  %></td>
  <td><%= o.name  %></td>
  <td><%= o.permalink  %></td>
  <td><%= o.position  %></td>
  <td><%= o.visible  %></td>
  <td><%= o.subject.name  %></td>
  <td>
    <%= link_to 'show', page_path(o) %>
    <%= link_to 'edit', edit_page_path(o) %>
    <%= link_to 'delete', page_path(o), method: :delete %>
  </td>
</tr>
<% end %>

</table>
