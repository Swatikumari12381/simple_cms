<h4> New page</h4>
<%= form_for(@section) do |f| %>
<% if @section.errors.any? %>
<ul>
<% @section.errors.full_messages.each do |pag| %>
<li><%= pag %></li>
<% end %>
</ul>
<% end %>
<div class=""form_group">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, class: 'from-control' %>
</div>
<div class=""form_group">
  <%= f.label :page_id %>
  <br>
  <%= f.select :page_id, options_for_select(Page.all.map {|e| [e.name, e.id] }), class: 'from-control' %>
</div>
<div class=""form_group">
  <%= f.label :position %>
  <br>
  <%= f.number_field :position,  class: 'from-control' %>
</div>
<div class=""form_group form-check">
  <%= f.check_box :visible,  class: 'from-control' %>
  <br>
  <%= f.label :visible, class: 'form-check-label' %>
</div>
<br>

<div class=""form_group">
  <%= f.label :content_type %>
  <br>
  <%= f.text_field :content_type, class: 'from-control' %>
</div>
<div class=""form_group">
  <%= f.label :content %>
  <br>
  <%= f.text_field :content, class: 'from-control' %>
</div>
<%= f.submit "save", class: 'btn btn-primary' %>
<% end %>
